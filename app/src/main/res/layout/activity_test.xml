<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.additionalActivities.TZChoice.TestActivity">

    <Button
        android:onClick="saveTestTz"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:backgroundTint="@color/main"
        android:id="@+id/saveTestPz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Сохранить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/typesTz"
        android:layout_width="0dp"
        android:layout_height="215dp"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Виды испытаний"
        android:inputType="textMultiLine|textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/requirementsTz"
        android:layout_width="0dp"
        android:layout_height="215dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="top"
        android:hint="Общие требования к приёмке работ"
        android:inputType="textMultiLine|textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/typesTz" />
</androidx.constraintlayout.widget.ConstraintLayout>